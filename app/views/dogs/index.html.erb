<p id="notice"><%= notice %></p>

<h1>Dogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Descriptin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @dogs.each do |dog| %>
      <tr>
        <td><%= dog.name %></td>
        <td><p class="centered p-20" style="color: #6e6e73;"><%= dog.descriptin.html_safe %></p></td>
        <td><%= link_to 'Show', dog %></td>
      </tr>
    <% end %>
  </tbody>
</table>

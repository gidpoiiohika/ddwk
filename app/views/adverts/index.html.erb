<p id="notice"><%= notice %></p>

<h1>Adverts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adverts.each do |advert| %>
      <tr>
        <td><%= advert.name %></td>
        <td><%= advert.description %></td>
        <td><%= link_to 'Show', advert %></td>
      </tr>
    <% end %>
  </tbody>
</table>
